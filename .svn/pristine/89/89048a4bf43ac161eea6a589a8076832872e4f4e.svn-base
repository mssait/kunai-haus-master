    ID BIGSERIAL PRIMARY KEY,
    NAME VARCHAR(200),
    PHONE VARCHAR(10),
    EMAIL VARCHAR(100) UNIQUE,
    ROLE_ID BIGINT REFERENCES ROLES(ID),
    COMPANY_ID BIGINT REFERENCES COMPANIES(ID),
    PASSWORD VARCHAR(500)
);

