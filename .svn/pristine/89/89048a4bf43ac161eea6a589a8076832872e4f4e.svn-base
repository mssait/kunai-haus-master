CREATE TABLE ROLES (
    ID BIGSERIAL PRIMARY KEY,
    ROLE VARCHAR(100)
);

INSERT INTO
    ROLES (ROLE)
VALUES
    ('Admin'),
    ('User');

CREATE TABLE PROVINCES (
    ID BIGSERIAL PRIMARY KEY,
    REGION VARCHAR(100),
    PROVINCE VARCHAR(100)
);

CREATE TABLE COMPANY_TYPES (
    ID BIGSERIAL PRIMARY KEY,
    TYPE VARCHAR(100) UNIQUE,
    SUBSCRIPTION_COST NUMERIC(10, 2),
    APPROVAL BOOLEAN DEFAULT FALSE
);

INSERT INTO
    COMPANY_TYPES (TYPE, SUBSCRIPTION_COST)
VALUES
    ('SME', 300),
    ('Bank', 3000),
    ('Government Officers', 3000),
    ('Development Partners', 10000),
    ('Private Companies', 5000);

CREATE TABLE COMPANIES (
    ID BIGSERIAL PRIMARY KEY,
    NAME VARCHAR(200),
    PROVINCE_ID BIGINT REFERENCES PROVINCES(ID),
    TYPE_ID BIGINT REFERENCES COMPANY_TYPES(ID),
    CREATED_TIME BIGINT,
    HAS_BILLBOARDS BOOLEAN DEFAULT FALSE,
    HAS_DETAILS BOOLEAN DEFAULT FALSE
);

CREATE TABLE BILLBOARD_STATUSES (
    ID SERIAL PRIMARY KEY,
    STATUS VARCHAR(50) UNIQUE
);

INSERT INTO
    BILLBOARD_STATUSES (STATUS)
VALUES
    ('Pending'),
    ('Approved'),
    ('Rejected');

CREATE TABLE BILLBOARDS (
    ID BIGSERIAL PRIMARY KEY,
    IMAGE VARCHAR(100),
    COMPANY_ID BIGINT REFERENCES COMPANIES(ID),
    INDEX INT,
    ACTIVE BOOLEAN DEFAULT FALSE
);

CREATE TABLE BILLBOARD_REQUESTS (
    ID BIGSERIAL PRIMARY KEY,
    COMPANY_ID BIGINT REFERENCES COMPANIES(ID),
    STATUS_ID INT REFERENCES BILLBOARD_STATUSES(ID),
    REMARK VARCHAR(250),
    CREATED_TIME BIGINT,
    MODIFIED_TIME BIGINT,
    MODIFIED_BY BIGINT REFERENCES USERS(ID)
);

CREATE TABLE BILLBOARD_REQUEST_BILLBOARDS (
    BILLBOARD_ID BIGINT REFERENCES BILLBOARDS(ID),
    REQUEST_ID BIGINT REFERENCES BILLBOARD_REQUESTS(ID),
    PRIMARY KEY(BILLBOARD_ID, REQUEST_ID)
);

CREATE TABLE SMES (
    ID BIGSERIAL PRIMARY KEY,
    COMPANY_ID BIGINT REFERENCES COMPANIES(ID),
    YEAR INT,
    EMP_MALE INT,
    EMP_FEMALE INT,
    LATITUDE NUMERIC(10, 2),
    LONGITUDE NUMERIC(10, 2),
    DESCRIPTION TEXT,
    FINANCE_ADVICE BOOLEAN,
    GREEN_FINANCE BOOLEAN,
    SMM BOOLEAN,
    WOMEN_LED BOOLEAN,
    FACEBOOK VARCHAR(200),
    INSTAGRAM VARCHAR(200),
    TWITTER VARCHAR(200),
    WHATSAPP VARCHAR(200),
    SNAPCHAT VARCHAR(200),
    ADDRESS_1 VARCHAR(200),
    ADDRESS_2 VARCHAR(200),
    WEBSITE VARCHAR(150),
    PHONE VARCHAR(15),
    EMAIL VARCHAR(100)
);

